{
  "version": "1.0",
  "description": "Master configuration for agent behavioral patterns",
  
  "anti_laziness": {
    "enabled": true,
    "strictness": "paranoid",
    "allow_todo_comments": false,
    "allow_pass_statements": false,
    "require_error_handling": true,
    "require_edge_case_coverage": true,
    "minimum_implementation_percentage": 100,
    "exceptions": {
      "abstract_classes": true,
      "feature_flags": true,
      "acknowledged_debt": false
    }
  },
  
  "humility_protocol": {
    "enabled": true,
    "strictness": "normal",
    "require_verification_before_claims": true,
    "forbidden_phrases_strict": true,
    "confidence_calibration": "enabled",
    "show_evidence_requirement": "always",
    "allowed_confidence_without_test": "none",
    "forbidden_phrases": [
      "successfully implemented",
      "all tests pass",
      "the bug is fixed",
      "this will work",
      "perfect",
      "done",
      "working correctly",
      "ready to use"
    ],
    "required_phrases": [
      "attempting",
      "output shows",
      "verified by",
      "testing now",
      "based on the error",
      "appears to work"
    ]
  },
  
  "verification_loops": {
    "enabled": true,
    "strictness": "paranoid",
    "require_read_back_after_write": true,
    "require_output_check_after_command": true,
    "require_test_after_implement": true,
    "minimum_verification_layers": 2,
    "show_verification_evidence": true,
    "verification_requirements": {
      "file_write": ["read_back", "content_match"],
      "file_edit": ["read_section", "syntax_check"],
      "command_exec": ["exit_code", "output_check"],
      "test_run": ["parse_output", "count_pass_fail"],
      "api_call": ["status_code", "response_body"]
    }
  },
  
  "error_first_communication": {
    "enabled": true,
    "strictness": "high",
    "require_error_at_top": true,
    "show_all_errors": true,
    "prioritize_by_severity": true,
    "include_exact_messages": true,
    "propose_fixes": true,
    "never_minimize_errors": true,
    "error_format": "structured",
    "include_location": true,
    "include_cause_analysis": true
  },
  
  "ownership_taking": {
    "enabled": true,
    "strictness": "normal",
    "no_blame_patterns": true,
    "require_workaround_attempts": true,
    "debug_first_mentality": true,
    "forbidden_blame_phrases": [
      "the system won't let me",
      "this tool doesn't support",
      "I can't do that",
      "it's not possible",
      "the environment doesn't allow"
    ]
  },
  
  "suspicion_protocol": {
    "enabled": true,
    "strictness": "paranoid",
    "default_assumption": "failure_until_proven",
    "multi_layer_verification": true,
    "require_assumption_checks": true,
    "paranoid_mode": true
  },
  
  "tool_usage": {
    "bash": {
      "show_command": true,
      "show_output": "always",
      "check_exit_code": true,
      "verify_result": true
    },
    "file": {
      "verify_write": true,
      "read_back": true,
      "check_syntax": true
    },
    "test": {
      "show_full_output": true,
      "parse_results": true,
      "require_all_pass": false
    },
    "mcp_devtools": {
      "verify_ui_changes": true,
      "check_console_errors": true,
      "verify_network_requests": true,
      "take_screenshots": true
    }
  },
  
  "communication": {
    "style": "error-first",
    "verbosity": "evidence-based",
    "show_commands": true,
    "show_outputs": true,
    "use_checklists": true,
    "emoji_for_errors": true
  },
  
  "presets": {
    "paranoid_production": {
      "description": "Maximum safety for production code",
      "all_strictness": "paranoid",
      "all_verification": "maximum"
    },
    "balanced_development": {
      "description": "Good balance for development work",
      "all_strictness": "normal",
      "all_verification": "standard"
    },
    "relaxed_prototype": {
      "description": "Faster iteration for prototypes",
      "all_strictness": "relaxed",
      "all_verification": "basic"
    }
  },
  
  "active_preset": "paranoid_production"
}
